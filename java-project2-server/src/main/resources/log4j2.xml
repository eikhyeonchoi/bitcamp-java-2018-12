<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
    
    <logger name="com.eomcs.lms" level="debug" additivity="false">
      <AppenderRef ref="Console"/>
    </logger>
  </Loggers>


  <Appenders>
    <Console name="Console">
      <PatternLayout pattern="[%-5level] - %C => %msg%n"/>
    </Console>
  </Appenders>
  
</Configuration>